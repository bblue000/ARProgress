<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <attr name="contentLoadingBackground" format="color|reference"/>
    <attr name="contentLoadingLayout" format="reference"/>
    <attr name="globalProgressBackground" format="color|reference"/>
    <attr name="globalProgressLayout" format="reference"/>

    <!-- 通用ARProgress的根View背景和内容背景，内容布局资源ID -->
    <attr name="contentLayout__PA" format="reference"/>
    <attr name="contentBackground__PA" format="color|reference"/>

    <declare-styleable name="ARPAProgress">
        <attr name="contentLayout__PA"/>
        <attr name="contentBackground__PA"/>
    </declare-styleable>

    <color name="arpaprogress__ar_def_window_bg">#ff0000</color>
    <color name="arpaprogress__ar_def_window_content_bg">#33333333</color>

    <style name="ARPAProgress" parent="android:Theme.NoTitleBar.Fullscreen">
        <!-- Window attributes -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- we consider is floating -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowAnimationStyle">@style/ARPAProgress.Anim.Def</item>

        <item name="contentBackground__PA">@color/arpaprogress__ar_def_window_content_bg</item>
    </style>

    <style name="ARPAProgress.Anim"/>
    <style name="ARPAProgress.Anim.Def">
        <item name="android:windowEnterAnimation">@anim/paanim_def__ar_show</item>
        <item name="android:windowExitAnimation">@anim/paanim_def__ar_hide</item>
    </style>

</resources>